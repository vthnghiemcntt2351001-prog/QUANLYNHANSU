@{
    ViewData["Title"] = "Trang chủ - Hệ thống Quản lý Nhân sự NTV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f0f6ff;
        font-family: 'Segoe UI', sans-serif;
    }

    h3, h5 {
        font-weight: 700;
    }

    /* Card tổng quan */
    .card-stat {
        border-radius: 16px;
        border: none;
        background: linear-gradient(135deg, #e0f2ff, #bde0fe);
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 100, 255, 0.1);
    }

    .card-stat:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 18px rgba(0, 100, 255, 0.25);
    }

    .card-stat .small {
        color: #1e3a8a;
        font-size: 14px;
    }

    .card-stat .h3 {
        margin-top: 8px;
    }

    /* Card nhân viên nổi bật - Đã tối ưu cho 4 cột */
    .employee-card {
        transition: all 0.3s ease;
        border-radius: 16px;
        background: #fff;
        border: 1px solid #e0f2ff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        height: 100%; /* Đảm bảo chiều cao bằng nhau trong grid */
    }

    .employee-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(0, 100, 255, 0.15);
    }
    
    footer {
        text-align: center;
        padding: 20px 0;
        color: #1e3a8a;
        font-size: 14px;
        border-top: 2px solid #93c5fd;
        background-color: #f8fafc;
        margin-top: 40px;
        border-radius: 12px;
    }

    /* Biểu đồ */
    .chart-card {
        border-radius: 16px;
        background: linear-gradient(135deg, #dbeafe, #bfdbfe);
        box-shadow: 0 6px 14px rgba(30, 64, 175, 0.15);
        border: none;
        padding: 25px;
        transition: all 0.3s ease;
    }

    .chart-card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(37, 99, 235, 0.25);
    }
</style>

<main class="main">
    <div class="container-fluid py-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3 class="fw-bold text-primary mb-1">Dashboard</h3>
                <p class="text-muted mb-0">Bảng điều khiển tổng quan hệ thống nhân sự</p>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card card-stat p-3 text-center border-start border-primary border-4">
                    <div class="small">Tổng nhân viên</div>
                    <div class="h3 text-primary fw-bold">150</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stat p-3 text-center border-start border-success border-4">
                    <div class="small">Nhân viên mới</div>
                    <div class="h3 text-success fw-bold">15</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stat p-3 text-center border-start border-warning border-4">
                    <div class="small">Phòng ban</div>
                    <div class="h3 text-warning fw-bold">10</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stat p-3 text-center border-start border-info border-4">
                    <div class="small">Hiệu suất</div>
                    <div class="h3 text-info fw-bold">87%</div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="chart-card">
                    <h5 class="fw-bold text-primary mb-3">📊 Độ tuổi & Số lượng theo phòng ban</h5>
                    <canvas id="chartNhanVien" height="150"></canvas>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="chart-card text-center">
                    <h5 class="fw-bold text-primary mb-3">👥 Tỷ lệ giới tính</h5>
                    <canvas id="genderChart" height="220"></canvas>
                </div>
            </div>
        </div>

        <div class="card shadow-lg p-4 border-0 rounded-4">
            <h3 class="text-center text-primary mb-4 fw-bold">🌟 Nhân viên nổi bật Tháng 12</h3>

            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4">
                @for (int i = 1; i <= 4; i++)
                {
                    <div class="col">
                        <div class="card employee-card p-3 border-0">
                            <div class="d-flex align-items-start mb-3 border-bottom pb-2">
                                <i class="fas fa-medal fa-2x text-warning me-3"></i>
                                <div>
                                    <h5 class="card-title fw-bold mb-0 text-primary">Lê Văn B (@(i))</h5>
                                    <small class="text-muted">Phòng ban @(i)</small>
                                </div>
                            </div>
                            
                            <p class="mb-2">
                                <strong class="text-dark">MSNV:</strong> 
                                <span class="text-secondary">MS00@(i)</span>
                            </p>
                            <p class="mb-2">
                                <strong class="text-dark">Thành tích:</strong> 
                                <span class="text-success fw-bold">Vượt mục tiêu @(100 + i * 5)%</span>
                            </p>
                            <p class="mb-2">
                                <strong class="text-dark">Chức vụ:</strong> 
                                <span class="text-secondary">Trưởng nhóm Kinh doanh</span>
                            </p>

                            <div class="mt-3 text-end">
                                <a href="#" class="fw-bold text-primary text-decoration-none small">Xem hồ sơ ></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <footer>© 2025 Hệ thống Quản lý Nhân sự NTV — Liên hệ: lienhe@qlns.com | 0866 701 733</footer>
    </div>
</main>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ cột
        const ctx = document.getElementById('chartNhanVien');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Kỹ thuật', 'Kinh doanh', 'Nhân sự', 'Kế toán', 'IT', 'Marketing'],
                datasets: [{
                    label: 'Số lượng',
                    data: [25, 18, 15, 12, 30, 20],
                    backgroundColor: [
                        '#2563eb', '#3b82f6', '#60a5fa', '#1d4ed8', '#1e40af', '#93c5fd'
                    ],
                    borderRadius: 8,
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true },
                    x: { grid: { display: false } }
                }
            }
        });

        // Biểu đồ tròn
        const gtx = document.getElementById('genderChart');
        new Chart(gtx, {
            type: 'doughnut',
            data: {
                labels: ['Nam', 'Nữ'],
                datasets: [{
                    data: [90, 60],
                    backgroundColor: ['#2563eb', '#60a5fa'],
                    borderWidth: 3,
                    borderColor: '#fff'
                }]
            },
            options: {
                plugins: {
                    legend: { position: 'bottom' }
                },
                cutout: '65%'
            }
        });
    </script>
}