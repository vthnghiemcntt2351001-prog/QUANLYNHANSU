@{
    ViewData["Title"] = "Trang chủ - Hệ thống Quản lý Nhân sự NTV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f0f6ff;
        font-family: 'Segoe UI', sans-serif;
    }

    h3, h5 {
        font-weight: 700;
    }

    /* Card tổng quan */
    .card-stat {
        border-radius: 16px;
        border: none;
        background: linear-gradient(135deg, #e0f2ff, #bde0fe);
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 100, 255, 0.1);
    }

    .card-stat:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 18px rgba(0, 100, 255, 0.25);
    }

    .card-stat .small {
        color: #1e3a8a;
        font-size: 14px;
    }

    .card-stat .h3 {
        margin-top: 8px;
    }

    /* Card nhân viên nổi bật */
    .employee-card {
        transition: all 0.3s ease;
        border-radius: 16px;
        overflow: hidden;
        background: #fff;
    }

    .employee-card:hover {
        transform: scale(1.04);
        box-shadow: 0 8px 20px rgba(0, 100, 255, 0.25);
    }

    .employee-card img {
        height: 220px;
        object-fit: cover;
        border-bottom: 3px solid #2563eb;
    }

    footer {
        text-align: center;
        padding: 20px 0;
        color: #1e3a8a;
        font-size: 14px;
        border-top: 2px solid #93c5fd;
        background-color: #f8fafc;
        margin-top: 40px;
        border-radius: 12px;
    }

    /* Biểu đồ */
    .chart-card {
        border-radius: 16px;
        background: linear-gradient(135deg, #dbeafe, #bfdbfe);
        box-shadow: 0 6px 14px rgba(30, 64, 175, 0.15);
        border: none;
        padding: 25px;
        transition: all 0.3s ease;
    }

    .chart-card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(37, 99, 235, 0.25);
    }
</style>

<!-- ===================== NỘI DUNG CHÍNH ===================== -->
<main class="main">
    <div class="container-fluid py-4">

        <!-- Tiêu đề Dashboard -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3 class="fw-bold text-primary mb-1">Dashboard</h3>
                <p class="text-muted mb-0">Bảng điều khiển tổng quan hệ thống nhân sự</p>
            </div>
        </div>

        <!-- Thống kê tổng quan -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card card-stat p-3 text-center border-start border-primary border-4">
                    <div class="small">Tổng nhân viên</div>
                    <div class="h3 text-primary fw-bold">150</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stat p-3 text-center border-start border-success border-4">
                    <div class="small">Nhân viên mới</div>
                    <div class="h3 text-success fw-bold">15</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stat p-3 text-center border-start border-warning border-4">
                    <div class="small">Phòng ban</div>
                    <div class="h3 text-warning fw-bold">10</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stat p-3 text-center border-start border-info border-4">
                    <div class="small">Hiệu suất</div>
                    <div class="h3 text-info fw-bold">87%</div>
                </div>
            </div>
        </div>

        <!-- Biểu đồ -->
        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="chart-card">
                    <h5 class="fw-bold text-primary mb-3">📊 Độ tuổi & Số lượng theo phòng ban</h5>
                    <canvas id="chartNhanVien" height="150"></canvas>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="chart-card text-center">
                    <h5 class="fw-bold text-primary mb-3">👥 Tỷ lệ giới tính</h5>
                    <canvas id="genderChart" height="220"></canvas>
                </div>
            </div>
        </div>

        <!-- Danh sách nhân viên nổi bật -->
        <div class="card shadow-lg p-4 border-0 rounded-4">
            <h3 class="text-center text-primary mb-4 fw-bold">🌟 Nhân viên nổi bật</h3>

            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4">
                @for (int i = 1; i <= 6; i++)
                {
                    <div class="col">
                        <div class="card employee-card text-center border-0">
                            <img src="/image/avatar.jpg" class="card-img-top" alt="Nhân viên @(i)">
                            <div class="card-body">
                                <h5 class="card-title fw-bold">Nhân viên @(i)</h5>
                                <p class="text-muted mb-1">MS00@(i)</p>
                                <small class="text-secondary">Phòng ban @(i % 3 + 1)</small>
                            </div>
                            <div class="card-footer bg-light">
                                <a href="#" class="fw-bold text-primary text-decoration-none">Chi tiết ></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Footer -->
        <footer>© 2025 Hệ thống Quản lý Nhân sự NTV — Liên hệ: lienhe@qlns.com | 0866 701 733</footer>
    </div>
</main>

<!-- ===================== SCRIPT BIỂU ĐỒ (Chart.js) ===================== -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ cột
        const ctx = document.getElementById('chartNhanVien');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Kỹ thuật', 'Kinh doanh', 'Nhân sự', 'Kế toán', 'IT', 'Marketing'],
                datasets: [{
                    label: 'Số lượng',
                    data: [25, 18, 15, 12, 30, 20],
                    backgroundColor: [
                        '#2563eb', '#3b82f6', '#60a5fa', '#1d4ed8', '#1e40af', '#93c5fd'
                    ],
                    borderRadius: 8,
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true },
                    x: { grid: { display: false } }
                }
            }
        });

        // Biểu đồ tròn
        const gtx = document.getElementById('genderChart');
        new Chart(gtx, {
            type: 'doughnut',
            data: {
                labels: ['Nam', 'Nữ'],
                datasets: [{
                    data: [90, 60],
                    backgroundColor: ['#2563eb', '#60a5fa'],
                    borderWidth: 3,
                    borderColor: '#fff'
                }]
            },
            options: {
                plugins: {
                    legend: { position: 'bottom' }
                },
                cutout: '65%'
            }
        });
    </script>
}


