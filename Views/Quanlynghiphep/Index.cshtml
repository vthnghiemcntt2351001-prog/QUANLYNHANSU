@{
    ViewData["Title"] = "Quản lý nghỉ phép";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-calendar-check"></i> Quản lý nghỉ phép</h4>
            <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#modalThemMoi">
                <i class="bi bi-plus-circle"></i> Thêm đơn nghỉ phép
            </button>
        </div>

        <div class="card-body">
            <!-- Thanh tìm kiếm -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Tìm kiếm theo tên hoặc phòng ban...">
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option value="">-- Lọc theo loại nghỉ --</option>
                        <option>Nghỉ phép năm</option>
                        <option>Nghỉ bệnh</option>
                        <option>Nghỉ không lương</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option value="">-- Lọc theo trạng thái --</option>
                        <option>Chờ duyệt</option>
                        <option>Đã duyệt</option>
                        <option>Từ chối</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100"><i class="bi bi-search"></i> Tìm kiếm</button>
                </div>
            </div>

            <!-- Bảng dữ liệu -->
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>#</th>
                            <th>Họ tên</th>
                            <th>Phòng ban</th>
                            <th>Loại nghỉ</th>
                            <th>Từ ngày</th>
                            <th>Đến ngày</th>
                            <th>Lý do</th>
                            <th>Trạng thái</th>
                            <th>Người duyệt</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">1</td>
                            <td>Nguyễn Văn A</td>
                            <td>Kỹ thuật</td>
                            <td>Nghỉ phép năm</td>
                            <td>2025-11-01</td>
                            <td>2025-11-03</td>
                            <td>Về quê</td>
                            <td class="text-center"><span class="badge bg-warning text-dark">Chờ duyệt</span></td>
                            <td class="text-center">Trần Thị B</td>
                            <td class="text-center">
                                <button class="btn btn-success btn-sm">Duyệt</button>
                                <button class="btn btn-danger btn-sm">Từ chối</button>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-center">2</td>
                            <td>Trần Thị C</td>
                            <td>Hành chính</td>
                            <td>Nghỉ bệnh</td>
                            <td>2025-11-05</td>
                            <td>2025-11-07</td>
                            <td>Ốm nhẹ</td>
                            <td class="text-center"><span class="badge bg-success">Đã duyệt</span></td>
                            <td class="text-center">Nguyễn Văn D</td>
                            <td class="text-center">
                                <button class="btn btn-secondary btn-sm" disabled>Đã duyệt</button>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-center">3</td>
                            <td>Phạm Thị E</td>
                            <td>Kinh doanh</td>
                            <td>Nghỉ không lương</td>
                            <td>2025-11-10</td>
                            <td>2025-11-11</td>
                            <td>Việc gia đình</td>
                            <td class="text-center"><span class="badge bg-danger">Từ chối</span></td>
                            <td class="text-center">Lê Văn F</td>
                            <td class="text-center">
                                <button class="btn btn-secondary btn-sm" disabled>Đã xử lý</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal thêm đơn nghỉ -->
<div class="modal fade" id="modalThemMoi" tabindex="-1" aria-labelledby="modalThemMoiLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalThemMoiLabel">Thêm đơn nghỉ phép mới</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Họ tên nhân viên</label>
                            <input type="text" class="form-control" placeholder="Nhập họ tên" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phòng ban</label>
                            <select class="form-select" required>
                                <option value="">-- Chọn phòng ban --</option>
                                <option>Kỹ thuật</option>
                                <option>Hành chính</option>
                                <option>Kinh doanh</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Loại nghỉ</label>
                            <select class="form-select" required>
                                <option value="">-- Chọn loại nghỉ --</option>
                                <option>Nghỉ phép năm</option>
                                <option>Nghỉ bệnh</option>
                                <option>Nghỉ không lương</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Từ ngày</label>
                            <input type="date" class="form-control" required>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Đến ngày</label>
                            <input type="date" class="form-control" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Lý do nghỉ</label>
                            <textarea class="form-control" rows="2" placeholder="Nhập lý do nghỉ..." required></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu đơn</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
