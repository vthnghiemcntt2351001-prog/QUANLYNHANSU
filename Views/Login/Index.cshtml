@{
    ViewData["Title"] = "Đăng nhập hệ thống nhân sự";
    Layout = null; //trang login không có layout chung
}
  <link rel="stylesheet" href="~/css/Login.css" />
    <div class="container login-container">
        <div class="card login-card">
            <div class="login-header">
                <h2>CÔNG TY NTV</h2>
                <p>Vui lòng đăng nhập để tiếp tục</p>
            </div>
            @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger login-error">
                        @ViewBag.Error
                    </div>
                }
            
            <div class="role-selector">
                <div class="role-option active" onclick="selectRole('employee')">
                    <h5>Nhân viên</h5>
                    <p>Dành cho cán bộ nhân viên</p>
                </div>
                <div class="role-option" onclick="selectRole('manager')">
                    <h5>Quản lý</h5>
                    <p>Dành cho ban quản lý</p>
                </div>
            </div>
            
            <div class="form-container">
               <form asp-action="Index" asp-controller="Login" method="post">

                     <input type="hidden" name="role" id="roleInput" value="employee" />

                        <div class="mb-3">
                            <label for="username" class="form-label">
                                <span id="usernameLabel">Tên đăng nhập nhân viên</span>
                            </label>
                            <div class="input-icon">
                                <input type="text" class="form-control" name="username" id="username" placeholder="Nhập tên đăng nhập" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <div class="input-icon">
                                <input type="password" class="form-control" name="password" id="password" placeholder="Nhập mật khẩu" required>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-login">
                            <span id="loginButtonText">Đăng nhập với tư cách nhân viên</span>
                        </button>

                    
                    <div class="forgot-password">
                        <a href="#">Quên mật khẩu?</a>
                    </div>
                </form>
            </div>
            
            <div class="footer-text">
                © 2025 Công ty NTV
            </div>
        </div>
    </div>
    
    
    <!-- JavaScript tùy chỉnh -->
  <script src="~/js/Login.js"></script>
