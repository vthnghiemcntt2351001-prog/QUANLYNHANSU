@{
    var role = Context.Session.GetString("Role");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Lý Nhân Sự</title>

    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <style>
        /* Sidebar xanh biển */
        .main-sidebar {
            background-color: #0d6efd !important;
        }

        /* Màu chữ menu */
        .nav-sidebar .nav-link {
            color: #ffffff !important;
        }

        /* Hover menu */
        .nav-sidebar .nav-link:hover {
            background-color: #0b5ed7 !important;
            color: #ffffff !important;
        }

        /* Active menu */
        .nav-sidebar .nav-link.active {
            background-color: #084298 !important;
            color: #ffffff !important;
        }

        /* Nền logo */
        .brand-link {
            background-color: #0b5ed7 !important;
            color: #ffffff !important;
        }

        .brand-link .brand-text {
            color: #ffffff !important;
        }

        /* ⭐ FIX GẠCH DƯỚI CHO TẤT CẢ BRAND VÀ NAV-LINK ⭐ */
        .brand-link,
        .brand-link:hover,
        .navbar-nav .nav-link,
        .navbar-nav .nav-link:hover,
        .nav-sidebar .nav-link,
        .nav-sidebar .nav-link:hover,
        .nav-sidebar .nav-link.active {
            text-decoration: none !important;
        }

        /* Nếu muốn chắc chắn anchor nào cũng không gạch */
        a {
            text-decoration: none !important;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- NAVIGATION BAR -->
        <nav class="main-header navbar navbar-expand navbar-dark navbar-primary">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>

                @* <li class="nav-item d-none d-sm-inline-block">
                     <a class="brand-link text-white" href="#" style="border:none;">
                        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" 
                             alt="Logo" class="brand-image img-circle elevation-2" style="opacity: .8">
                        <span class="brand-text font-weight-light">QUẢN LÝ NHÂN SỰ</span>
                    </a>
                </li> *@
            </ul>

            <ul class="navbar-nav ml-auto">

                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i> Xin chào, 
                             <strong>@Context.Session.GetString("Username")</strong>
                    </a>

                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                         <span class="dropdown-header">@Context.Session.GetString("Username")</span>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="Login" asp-action="Index" class="dropdown-item">
                            <i class="fas fa-sign-out-alt mr-2"></i> Đăng xuất
                        </a>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- SIDEBAR -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <a href="#" class="brand-link">
                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"
                     alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">NTV HR System</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">

@if (role != "NhanVien")
{
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link active">
                                <i class="nav-icon fas fa-home"></i>
                                <p>Trang chủ</p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-user-tie"></i>
                                <p>
                                    Quản lý nhân sự
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="QLnhanvien" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Quản lý nhân viên</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="QLchamcong" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Quản lý chấm công</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="QLphongban" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Quản lý phòng ban</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="Khenthuongkyluat" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Khen thưởng & kỷ luật</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="Quanlyhopdong" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Hợp đồng lao động</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="QLluong" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Quản lý lương</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="Quanlynghiphep" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Quản lý nghỉ phép</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="Thongkebaocao" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Thống kê & Báo cáo</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

@if (role == "Admin")
{
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>
                                    Quản trị viên
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="QuanTriVien" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Tài khoản & Phân quyền</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
}
}

@if (role == "NhanVien" || role == "NhanSu" || role == "Admin")
{
    <li class="nav-item has-treeview">
        <a href="#" class="nav-link">
            <i class="nav-icon fas fa-user-alt"></i>
            <p>
                Nhân viên
                <i class="right fas fa-angle-left"></i>
            </p>
        </a>

        <ul class="nav nav-treeview">
            <li class="nav-item">
                <a asp-controller="Nhanvien" asp-action="Index" class="nav-link">
                    <i class="far fa-circle nav-icon"></i>
                    <p>Hồ sơ cá nhân</p>
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Dangkynghiphep" asp-action="Dangkynghiphep" class="nav-link">
                    <i class="far fa-circle nav-icon"></i>
                    <p>Đăng ký nghỉ phép</p>
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Xemluongcanhan" asp-action="Xemluongcanhan" class="nav-link">
                    <i class="far fa-circle nav-icon"></i>
                    <p>Xem lương thưởng</p>
                </a>
            </li>
        </ul>
    </li>
}

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-phone"></i>
                                <p>Liên hệ</p>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </section>
        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2025 NTV HR.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Địa chỉ:</b> 123 Đường 3/2, Ninh Kiều, Cần Thơ
            </div>
        </footer>

        <aside class="control-sidebar control-sidebar-dark"></aside>

    </div>

    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
